case $BUTTON in
	1) pactl set-sink-mute @DEFAULT_SINK@ toggle;;
	3) notify-send "Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
- Middle click to mute.
- Scroll to change." ;;
