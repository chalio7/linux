#Worktime
# super + w
# 	sh $HOME/scripts/worktime/worktime


XF86AudioLowerVolume
		pactl set-sink-volume @DEFAULT_SINK@ -5%;pkill -RTMIN+5 blocks
XF86AudioRaiseVolume
		pactl set-sink-volume @DEFAULT_SINK@  +5%;pkill -RTMIN+5 blocks
XF86AudioMute
		pactl set-sink-mute @DEFAULT_SINK@ toggle;pkill -RTMIN+5 blocks
