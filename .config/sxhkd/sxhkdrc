#screenshoter
shift + Print
  screenshoter

#terminal
super + Return
	st

#bluetooth
alt + b
		bctl

#Move cursor
super + n
		moveDesktop

#mount usb
alt + M
	mounter

#unmount usb
alt + U
	unmounter

#emoji
alt + e
	emoji

alt + m
	double-monitor

#shutdown
alt + s
	shutdown-menu

#browser
alt + w
	$BROWSER

super F5
	toggleTouchpad

alt + q
   passmenu

super + p
   rofi -show run

